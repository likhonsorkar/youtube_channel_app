<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".channel_info_fragment">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/channelprofimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/channelname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Channel Name"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:id="@+id/subscribebtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Subscribe"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/baseline_ads_click_24"
            />
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/channeldescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:padding="10dp"
                android:textSize="18sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed fermentum, nisl eget aliquam eleifend, sapien elit vehicula libero, vel venenatis ex quam vitae urna. Mauris sit amet convallis metus. Nullam ac nisi vitae justo ullamcorper euismod. Donec non mauris in velit venenatis consequat. Duis aliquet nisi at justo rhoncus, vitae sodales ipsum dapibus. Sed ut sapien ligula."
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>